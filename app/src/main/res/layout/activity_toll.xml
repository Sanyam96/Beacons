    <pl.droidsonroids.gif.GifTextView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@drawable/tollstation"
        android:id="@+id/view" />

    <pl.droidsonroids.gif.GifTextView
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:background="@drawable/q"
        android:id="@+id/view3"
        android:layout_alignTop="@+id/view2"
        android:layout_centerHorizontal="true" />

    <pl.droidsonroids.gif.GifTextView
        android:layout_width="30dp"
        android:layout_height="50dp"
        android:background="@drawable/arrow"
        android:id="@+id/view2"
        android:layout_below="@+id/view"
        android:layout_toEndOf="@+id/textView3" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Type : Lightweight Vehicle"
        android:id="@+id/textView2"
        android:layout_below="@+id/view3"
        android:layout_alignParentStart="true"
        android:layout_marginTop="45dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Car : Maruti"
        android:id="@+id/textView3"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/textView2"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Registration Number : 23234134"
        android:id="@+id/textView4"
        android:layout_below="@+id/textView3"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Number Plate              : DL 02 C 2204"
        android:id="@+id/textView5"
        android:layout_below="@+id/textView4"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="60dp"
        android:text="Welcome"
        android:id="@+id/textView6"
        android:textColor="@color/colorPrimary"
        android:textStyle="bold"
        android:layout_alignBottom="@+id/textView3"
        android:layout_centerHorizontal="true" />

